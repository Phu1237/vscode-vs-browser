{
	"name": "vs-browser",
	"displayName": "VS Browser",
	"description": "Built-in browser for Visual Studio Code",
	"publisher": "Phu1237",
	"author": {
		"name": "Phu1237",
		"url": "https://github.com/Phu1237"
	},
	"version": "1.2.1",
	"license": "SEE LICENSE IN LICENSE.md",
	"bugs": {
		"url": "https://github.com/Phu1237/vscode-vs-browser/issues",
		"email": "phu1237@gmail.com"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/Phu1237/vscode-vs-browser"
	},
	"engines": {
		"vscode": "^1.63.0"
	},
	"categories": [
		"Other"
	],
	"icon": "images/icon.png",
	"keywords": [
		"vs",
		"browser",
		"visual",
		"studio",
		"code",
		"vscode"
	],
	"activationEvents": [
		"onStartupFinished"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "vs-browser.start",
				"title": "VS Browser: Start Browser"
			},
			{
				"command": "vs-browser.startWithProxy",
				"title": "VS Browser: Start Browser with Proxy"
			},
			{
				"command": "vs-browser.startWithoutProxy",
				"title": "VS Browser: Start Browser without Proxy"
			}
		],
		"configuration": {
			"properties": {
				"vs-browser.proxy": {
					"type": "boolean",
					"default": false,
					"description": "Use proxy to prevent the some errors (Longer loading time and can not use with localhost)"
				},
				"vs-browser.showMessageDialog": {
					"type": "boolean",
					"default": false,
					"description": "Show message dialog (sometimes the dialog still displays even if nothing goes wrong)"
				},
				"vs-browser.showStatusBarItem": {
					"type": "boolean",
					"default": true,
					"description": "Show status bar item"
				},
				"vs-browser.url": {
					"type": "string",
					"default": "http://localhost",
					"description": "Default open URL when start the browser"
				},
				"vs-browser.columnToShowIn": {
					"type": "string",
					"default": "Two",
					"enum": [
						"One",
						"Two",
						"Three",
						"Active",
						"Beside"
					],
					"enumDescriptions": [
						"Show in First column",
						"Show in Second Column",
						"Show in Third column",
						"Show in Active Column",
						"Show in Beside column of Active column"
					],
					"description": "Default column to show in"
				},
				"vs-browser.reload.onSave": {
					"type": "boolean",
					"default": false,
					"description": "Auto reload the browser when file is saved"
				},
				"vs-browser.reload.enableAutoReload": {
					"type": "boolean",
					"default": false,
					"description": "Auto reload the browser after a limited time"
				},
				"vs-browser.reload.time": {
					"type": "number",
					"default": 15000,
					"description": "The limited time in milliseconds"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile && yarn run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.63.0",
		"@types/glob": "^7.1.4",
		"@types/mocha": "^9.0.0",
		"@types/node": "14.x",
		"@typescript-eslint/eslint-plugin": "^5.1.0",
		"@typescript-eslint/parser": "^5.1.0",
		"eslint": "^8.1.0",
		"glob": "^7.1.7",
		"mocha": "^9.1.3",
		"typescript": "^4.4.4",
		"@vscode/test-electron": "^1.6.2"
	}
}